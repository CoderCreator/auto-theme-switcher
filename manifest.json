{
  "manifest_version": 3,
  "name": "Website Auto Theme Changer",
  "version": "1.0",
  "description": "Automatically changes website themes based on system preferences.",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
